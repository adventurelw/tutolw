= form_for(@micropost) do |f|
  = render 'shared/error_messages', object: f.object
  .field
    = f.text_area :content,
                  placeholder: 'Compose new micropost.....',
                  size: '30x10',
                  style: 'height: 100px;'
  = f.submit 'Post', class: 'btn btn-large btn-primary'
